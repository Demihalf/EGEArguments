<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kharvd.egearguments"
    android:installLocation="preferExternal"
    android:versionCode="3"
    android:versionName="@string/versionNumber" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:description="@string/about_string"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >
        <activity android:name=".EGEArguments" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ProblemsActivity" >
        </activity>
        <activity android:name="ArgumentsActivity" >
        </activity>
        <activity
            android:name="AboutActivity"
            android:label="@string/about"
            android:theme="@style/LightTheme.Dialog" >
        </activity>
        <activity android:name="PreferencesActivity"></activity>
    </application>

</manifest>